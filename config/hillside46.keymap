#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

#define L_BASE 0
#define L_QWERTY 1
#define L_DVORAK 2
#define L_LOWER 3
#define L_RAISE 4
#define L_ADJUST 5

#define _______ &trans

#define Undo   LC(Z)
#define Cut    LC(X)
#define Copy   LC(C)
#define Paste  LC(V)

/ {
  combos {
    compatible = "zmk,combos";
    timeout-ms = <2>;
    grave {
      key-positions = <1 13>;
      bindings = <&kp GRAVE>;
    };
    combo_esc {
      key-positions = <2 14>;
      bindings = <&kp ESC>;
    };
    forward_slash {
      key-positions = <9 21>;
      bindings = <&kp FSLH>;
    };
    back_slash {
      key-positions = <10 22>;
      bindings = <&kp BSLH>;
    };
    lpar {
      key-positions = <4 16>;
      bindings = <&kp LPAR>;
    };
   lshift {
      key-positions = <3 15>;
      bindings = <&skq LSHIFT>;
    };
    rshift {
      key-positions = <8 20>;
      bindings = <&skq RSHIFT>;
    }; 
    rpar {
      key-positions = <7 19>;
      bindings = <&kp RPAR>;
    };
    combo_cw {
      key-positions = <43 40>;
      bindings = <&caps_word>;
    };
  };

  behaviors {
    hm: shift {
      compatible = "zmk,behavior-hold-tap";
      label = "SHIFT_HOLD_TAP";
      #binding-cells = <2>;
      tapping-term-ms = <150>;
      quick_tap_ms = <150>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    };
    skq: sticky_key_quick_release {
      compatible = "zmk,behavior-sticky-key";
      label = "STICKY_KEY_QUICK_RELEASE";
      #binding-cells = <1>;
      bindings = <&kp>;
      release-after-ms = <1000>;
      quick-release;
    }; 
    tddc: tap_dance_dot_comma {
      compatible = "zmk,behavior-tap-dance";
      label = "TAP_DANCE_0";
      #binding-cells = <0>;
      tapping-term-ms = <125>;
      bindings = <&kp DOT>, <&kp COMMA>;
    };
    tdlg: tap_dance_less_greater {
      compatible = "zmk,behavior-tap-dance";
      label = "TAP_DANCE_1";
      #binding-cells = <0>;
      tapping-term-ms = <125>;
      bindings = <&kp GT>, <&kp LT>;
    };
    tdcs: tap_dance_col_semi {
      compatible = "zmk,behavior-tap-dance";
      label = "TAP_DANCE_2";
      #binding-cells = <0>;
      tapping-term-ms = <125>;
      bindings = <&kp COLON>, <&kp SEMI>;
    };
    tdad: tap_dance_apos_dqt {
      compatible = "zmk,behavior-tap-dance";
      label = "TAP_DANCE_3";
      #binding-cells = <0>;
      tapping-term-ms = <125>;
      bindings = <&kp APOS>, <&kp LS(APOS)>;
    };
  };
};

&lt {
  tapping-term-ms = <150>;
  quick-tap-ms = <135>;
};

&caps_word {
  continue-list = <UNDERSCORE BACKSPACE>;
};

